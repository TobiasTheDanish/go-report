package view

templ SignIn(authUrl templ.SafeURL, errorMessage string) {
	@base() {
		if errorMessage != "" {
			<p>
				{ errorMessage }
			</p>
		}
		<a href={ authUrl }>Login with GitHub</a>
	}
}

